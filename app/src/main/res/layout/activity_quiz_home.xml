<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_home"> <!-- Black background for dark theme -->

    <!-- Title or Header Text -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Your Company Eligibility"
        android:textSize="26sp"
        android:textColor="#D06FE0"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="48dp"
    android:fontFamily="sans-serif-medium"
    android:shadowColor="#009688"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="3" />

    <!-- Instructional Text -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take the assessment to check which companies you are eligible for based on your skills."
        android:textSize="18sp"
        android:textColor="#CCCCCC"
    android:layout_below="@id/tvHeader"
    android:layout_marginTop="16dp"
    android:layout_centerHorizontal="true"
    android:layout_marginHorizontal="32dp"
    android:gravity="center"
    android:fontFamily="sans-serif"
    android:lineSpacingExtra="4dp" />

    <!-- Button to Check Assessment -->
    <Button
        android:id="@+id/btnCheckAssessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Assessment"
        android:layout_below="@id/tvDescription"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="16dp"
        android:backgroundTint="#9C2FAF"
    android:textColor="#000000"
    android:textSize="16sp"
    android:fontFamily="sans-serif-medium"

    android:elevation="6dp" />

    <!-- Add Some Design Elements (Optional) -->

    <!-- Green Divider Line -->
    <View
        android:id="@+id/divider"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_below="@id/tvDescription"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:background="#CC68DC" />

    <!-- Circular Design at the Bottom -->
<!--    <ImageView-->
<!--        android:id="@+id/circleDesign"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:src="@drawable/circle"-->
<!--    android:layout_alignParentBottom="true"-->
<!--    android:layout_centerHorizontal="true"-->
<!--    android:layout_marginBottom="48dp"-->
<!--    android:tint="#00A000" />-->
</RelativeLayout>
