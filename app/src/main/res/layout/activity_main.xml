<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp">

    <!-- CardView for the form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#311137"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sign Up Title -->
            <TextView
                android:id="@+id/Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <!-- Already Registered text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/alreadyRegisteredText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already Registered?"
                    android:textColor="#A4A4A4"
                    android:textSize="14sp" />

                <!-- Log in Link -->
                <TextView
                    android:id="@+id/loginLink1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Log in"
                    android:textColor="#B02DC7"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Name Field -->
            <EditText
                android:id="@+id/nameEditText1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="NAME"
                android:backgroundTint="#44436F"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textColorHint="#A4A4A4"
                android:layout_marginTop="16dp" />

            <!-- Email Field -->
            <EditText
                android:id="@+id/emailEditText1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="EMAIL"
                android:backgroundTint="#44436F"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textColorHint="#A4A4A4"
                android:inputType="textEmailAddress"
                android:layout_marginTop="16dp" />

            <!-- Password Field -->
            <EditText
                android:id="@+id/passwordEditText1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="PASSWORD"
                android:backgroundTint="#44436F"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textColorHint="#A4A4A4"
                android:inputType="textPassword"
                android:layout_marginTop="16dp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signUpButton1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#61166D"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
