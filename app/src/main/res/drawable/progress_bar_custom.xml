<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of the ProgressBar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#E0E0E0" /> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Secondary Progress (Optional) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="#BDBDBD" /> <!-- Medium gray for secondary progress -->
            </shape>
        </clip>
    </item>

    <!-- Primary Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="#3F51B5" /> <!-- Primary color (e.g., Indigo) -->
            </shape>
        </clip>
    </item>

</layer-list>
